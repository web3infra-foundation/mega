load("@prelude//rust:cargo_package.bzl", "cargo")

cargo.rust_library(
    name = "shlex",
    edition = "2021",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    visibility = ["PUBLIC"],
    features = ["default", "std"],
    deps = [],
)

cargo.rust_library(
    name = "shlex-no-std",
    edition = "2021",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    visibility = ["PUBLIC"],
    features = [],
    deps = [],
    rustc_flags = ["--cfg", "no_std"],
)
